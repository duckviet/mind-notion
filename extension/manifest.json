{
  "manifest_version": 3,
  "name": "Mind Notion",
  "description": "Save selected text to Mind Notion quickly and easily",
  "version": "2.1",
  "icons": {
    "16": "icons/icon16.png"
  },
  "permissions": ["contextMenus", "activeTab", "scripting", "storage"],
  "host_permissions": ["http://localhost:8000/*", "<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Mind Notion - Save Selection"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+M",
        "mac": "Alt+Shift+M"
      },
      "description": "Toggle Mind Notion floating popup"
    },
    "toggle-floating-popup": {
      "suggested_key": {
        "default": "Alt+M",
        "mac": "Alt+M"
      },
      "description": "Toggle floating popup on page"
    }
  }
}
